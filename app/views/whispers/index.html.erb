<p><%= notice %></p>

<table>
    <tr>
        <th>id</th>
        <th>ツイート内容</th>
        <th>作成年月日</th>
    </tr>

<!-- @whispersは、each文を使って個別に取る形になる -->
<% @whispers.each do |whisper| %>
    <tr>
        <td><%= whisper.id %></td>
        <td><%= whisper.content %></td>
        <td><%= whisper.created_at %></td>
    </tr>
<% end %>
</table>
